{
  "name": "electron-forge-rspack-template",
  "productName": "electron-forge-rspack-template",
  "version": "1.0.0",
  "description": "it's electron-forge template",
  "main": ".rspack/main",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron-forge start",
    "package": "cross-env NODE_ENV=production electron-forge package",
    "make": "cross-env NODE_ENV=production electron-forge make",
    "publish": "cross-env NODE_ENV=production electron-forge publish",
    "lint": "npm run lint:tsc && npm run lint:script  && npm run lint:style",
    "lint:script": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:style": "stylelint \"src/**/*.{less,css}\"",
    "lint:tsc": "tsc --noEmit"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "7.1.0",
    "@electron-forge/maker-deb": "7.1.0",
    "@electron-forge/maker-rpm": "7.1.0",
    "@electron-forge/maker-squirrel": "7.1.0",
    "@electron-forge/maker-zip": "7.1.0",
    "@electron-forge/plugin-auto-unpack-natives": "7.1.0",
    "@rspack/plugin-react-refresh": "^0.4.2",
    "@types/node": "^20.10.5",
    "@types/react": "18.2.38",
    "@types/react-dom": "18.2.17",
    "@typescript-eslint/eslint-plugin": "6.12.0",
    "@typescript-eslint/parser": "6.12.0",
    "cross-env": "7.0.3",
    "css-loader": "6.8.1",
    "css-minimizer-webpack-plugin": "5.0.1",
    "electron": "27.1.2",
    "electron-forge-plugin-rspack": "^0.0.2",
    "esbuild": "0.19.7",
    "esbuild-loader": "4.0.2",
    "eslint": "8.54.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unused-imports": "3.0.0",
    "eslint-webpack-plugin": "^4.0.1",
    "fork-ts-checker-webpack-plugin": "9.0.2",
    "jest": "29.7.0",
    "less-loader": "11.1.3",
    "mini-css-extract-plugin": "2.7.6",
    "node-loader": "2.0.0",
    "postcss-less": "6.0.0",
    "prettier": "3.1.0",
    "style-loader": "3.3.3",
    "stylelint": "15.11.0",
    "stylelint-config-recess-order": "4.4.0",
    "stylelint-config-standard": "34.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.7.0",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "electron-squirrel-startup": "1.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "stylelint-webpack-plugin": "^4.1.1"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ],
    "plugins": [
      "stylelint-declaration-block-no-ignored-properties"
    ],
    "customSyntax": "postcss-less",
    "rules": {
      "plugin/declaration-block-no-ignored-properties": true
    }
  },
  "prettier": {
    "printWidth": 150,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "eslintIgnore": [
    "/node_modules/",
    "**/*.js"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "**/*.tsx"
        ],
        "rules": {
          "react/prop-types": "off"
        }
      }
    ],
    "extends": [
      "airbnb",
      "airbnb-typescript",
      "airbnb/hooks",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended",
      "plugin:import/recommended",
      "plugin:import/electron",
      "plugin:import/typescript"
    ],
    "plugins": [
      "jest",
      "simple-import-sort",
      "unused-imports"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "import/no-extraneous-dependencies": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "import/prefer-default-export": "off",
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "react/react-in-jsx-scope": "off",
      "no-implied-eval": 2,
      "@typescript-eslint/no-implied-eval": 0,
      "dot-notation": 2,
      "@typescript-eslint/dot-notation": 0,
      "no-throw-literal": 2,
      "@typescript-eslint/no-throw-literal": 0,
      "no-return-await": 2,
      "@typescript-eslint/return-await": 0,
      "unused-imports/no-unused-imports": "warn",
      "unused-imports/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ]
    }
  }
}
